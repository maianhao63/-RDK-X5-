<?xml version="1.0"?>
<robot name="fishbot">
  <!-- 全局坐标系（里程计参考系） -->
  <link name="odom">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.005" />
      </geometry>
      <material name="red">
        <color rgba="1.0 0.0 0.0 0.5" />
      </material>
    </visual>
  </link>
  
  <!-- 基础足迹坐标系（与地面接触点） -->
  <link name="base_footprint">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.01" />
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 0.3" />
      </material>
    </visual>
  </link>
  
  <!-- 连接 odom 和 base_footprint -->
  <joint name="odom_to_footprint" type="fixed">
    <parent link="odom" />
    <child link="base_footprint" />
    <origin xyz="0 0 0" rpy="0 0 0" />
  </joint>
  
  <!-- 机器人主体 -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.06" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.12" radius="0.10" />
      </geometry>
      <material name="blue">
        <color rgba="0.1 0.1 1.0 0.8" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.06" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.12" radius="0.10" />
      </geometry>
    </collision>
    <inertial>
      <mass value="3.0" />
      <origin xyz="0 0 0.06" rpy="0 0 0" />
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" 
               iyy="0.01" iyz="0.0" izz="0.01" />
    </inertial>
  </link>
  
  <!-- 连接 base_footprint 和 base_link -->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint" />
    <child link="base_link" />
    <origin xyz="0.0 0.0 0.06" rpy="0 0 0" />
  </joint>

  <!-- 激光雷达 -->
  <link name="laser_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.03" radius="0.03" />
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.03" radius="0.03" />
      </geometry>
    </collision>
  </link>
  
  <joint name="laser_joint" type="fixed">
    <parent link="base_link" />
    <child link="laser_link" />
    <origin xyz="0 0 0.12" rpy="0 0 0" />
  </joint>
  
  <!-- IMU传感器 -->
  <link name="imu_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.02 0.02 0.02" />
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.02 0.02 0.02" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0"
               iyy="0.00001" iyz="0.0" izz="0.00001" />
    </inertial>
  </link>
  
  <joint name="imu_joint" type="fixed">
    <parent link="base_link" />
    <child link="imu_link" />
    <origin xyz="0 0 0.12" rpy="0 0 0" />
  </joint>

  <!-- 左轮 -->
  <link name="left_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.570796 0 0" /> <!-- π/2弧度，使圆柱侧放 -->
      <geometry>
        <cylinder length="0.05" radius="0.032" />
      </geometry>
      <material name="gray">
        <color rgba="0.7 0.7 0.7 1.0" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.570796 0 0" />
      <geometry>
        <cylinder length="0.05" radius="0.032" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1" />
      <origin xyz="0 0 0" rpy="1.570796 0 0" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" 
               iyy="0.00005" iyz="0.0" izz="0.0001" />
    </inertial>
  </link>
  
  <!-- 右轮 -->
  <link name="right_wheel_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.570796 0 0" />
      <geometry>
        <cylinder length="0.05" radius="0.032" />
      </geometry>
      <material name="gray">
        <color rgba="0.7 0.7 0.7 1.0" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.570796 0 0" />
      <geometry>
        <cylinder length="0.05" radius="0.032" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1" />
      <origin xyz="0 0 0" rpy="1.570796 0 0" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" 
               iyy="0.00005" iyz="0.0" izz="0.0001" />
    </inertial>
  </link>
  
  <!-- 左轮关节（连续旋转） -->
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="left_wheel_link" />
    <origin xyz="0 0.075 -0.03" rpy="0 0 0" />
    <axis xyz="0 1 0" /> <!-- 旋转轴为Y轴 -->
    <dynamics damping="0.01" friction="0.01" />
  </joint>
  
  <!-- 右轮关节（连续旋转） -->
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link" />
    <child link="right_wheel_link" />
    <origin xyz="0 -0.075 -0.03" rpy="0 0 0" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.01" friction="0.01" />
  </joint>
</robot>